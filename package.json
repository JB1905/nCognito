{
  "name": "ncognito",
  "version": "2.0.0",
  "description": "Cross browser incognito mode extension",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "scripts": {
    "release": "rimraf dist/* && npm run prettier && npm run lint && npm run build",
    "build": "webpack --env build",
    "build:dev": "webpack --env dev",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "lint": "eslint 'src/**/*.{vue,ts}' --fix",
    "prettier": "prettier --write 'src/**/*.{vue,ts,scss,html}'",
    "commit": "git-cz"
  },
  "dependencies": {
    "vue": "^3.0.0-beta.14"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^2.34.0",
    "@vue/compiler-sfc": "^3.0.0-beta.14",
    "copy-webpack-plugin": "^6.0.1",
    "css-loader": "^3.5.3",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "extensionizer": "^1.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.4",
    "node-sass": "^4.14.1",
    "platform": "^1.3.5",
    "prettier": "^2.0.5",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.4",
    "typescript": "^3.9.2",
    "vue-eslint-parser": "^7.1.0",
    "vue-loader": "^16.0.0-beta.2",
    "webpack": "^4.43.0",
    "webpack-chrome-extension-reloader": "^1.3.0",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{vue,ts}": [
      "npm run prettier",
      "npm run lint"
    ],
    "src/**/*.{scss}": [
      "npm run prettier"
    ],
    "src/**/*.{html}": [
      "npm run prettier"
    ]
  },
  "browserslist": [
    "> 0.25%",
    "not ie 11",
    "not op_mini all"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
